IPTABLES=iptables

GW_INTERFACE=$1

${IPTABLES} -t nat -F wifidog_p1
${IPTABLES} -t nat -F wifidog_p2
${IPTABLES} -t nat -F wifidog_p3
${IPTABLES} -t nat -F wifidog_p4
${IPTABLES} -t nat -F wifidog_p5
${IPTABLES} -t nat -F wifidog_class
${IPTABLES} -t mangle -F wifidog_mark
${IPTABLES} -t nat -X wifidog_p1
${IPTABLES} -t nat -X wifidog_p2
${IPTABLES} -t nat -X wifidog_p3
${IPTABLES} -t nat -X wifidog_p4
${IPTABLES} -t nat -X wifidog_p5

RC=0
while [ ${RC} -eq 0 ]
do
    ${IPTABLES} -t nat -D PREROUTING -i ${GW_INTERFACE} -j wifidog_class 2>/dev/null
    RC=$?
done

${IPTABLES} -t nat -X wifidog_class

RC=0
while [ ${RC} -eq 0 ]
do
    ${IPTABLES} -t mangle -D PREROUTING -i ${GW_INTERFACE} -j wifidog_mark 2>/dev/null
    RC=$?
done

${IPTABLES} -t mangle -X wifidog_mark

